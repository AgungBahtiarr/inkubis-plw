    <div class="font-normal">
      <h1 class="text-center">About Us</h1>
      <div class="mx-auto flex justify-center">
        <p class="mt-4 w-[800px] text-center">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
          volutpat, turpis vehicula ultrices placerat, urna ligula imperdiet
          augue, non consequat lorem erat vel felis. Donec mollis eros nec
          suscipit consectetur.
        </p>
      </div>

      <div class="mt-8 flex justify-center gap-4">
        <div class="max-w-md rounded-md bg-slate-100 p-4 md:p-8">
          <h2 class="text-center">Visi</h2>
          <p class="mt-2">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
            volutpat, turpis vehicula ultrices placerat, urna ligula imperdiet
            augue, non consequat lorem erat vel felis.
          </p>
        </div>
        <div class="max-w-md rounded-md bg-slate-100 p-4 md:p-8">
          <h2 class="text-center">Misi</h2>
          <p class="mt-2">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
            volutpat, turpis vehicula ultrices placerat, urna ligula imperdiet
            augue, non consequat lorem erat vel felis.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="mx-8 my-12">
    <div>
      <h1 class="text-center">Our Teams</h1>
      <div class="flex justify-center">
        <p class="mb-5 mt-4 w-[800px] text-center">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
          volutpat, turpis vehicula ultrices placerat, urna ligula imperdiet
          augue, non consequat lorem erat vel felis. Donec mollis eros nec
          suscipit consectetur.
        </p>
      </div>
    </div>

    <div class="mt-4 flex flex-row flex-wrap justify-center gap-6">
      {
        teams.map((item: any) => {
          return (
            <ProfileCard
              image={item.profile.images}
              name={item.profile.name}
              position={item.profile.position}
              linkLinkedIn={item.profile.linkLinkedIn}
              linkInstagram={item.profile.linkInstagram}
              linkTwitter={item.profile.linkTwitter}
            />
          );
        })
      }
    </div>
  </section>

</Base>
