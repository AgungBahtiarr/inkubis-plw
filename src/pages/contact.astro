---
import Base from "../layouts/Base.astro";
---

<Base>
  <section class="section mx-8">
    <div class="font-normal">
      <h1 class="text-center">Let us know how we can help</h1>
      <div class="mx-auto flex justify-center">
        <p class="mt-4 w-[800px] text-center">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
          volutpat, turpis vehicula ultrices placerat, urna ligula imperdiet
          augue, non consequat lorem erat vel felis. Donec mollis eros nec
          suscipit consectetur.
        </p>
      </div>
    </div>
  </section>

  <section>
    <div class="pb-14">
      <div class="mx-auto max-w-screen-xl px-4 text-gray-600 md:px-8">
        <div
          class="mx-auto max-w-lg justify-center gap-12 lg:flex lg:max-w-none"
        >
          <div class="mt-12 flex-1 sm:max-w-lg lg:max-w-md">
            <form
              class="space-y-5"
              name="contact"
              method="post"
              data-netlify="true"
            >
              <div>
                <label class="font-medium"> Full name</label>
                <input
                  name="name"
                  type="text"
                  required
                  class="mt-2 w-full rounded-lg border bg-transparent px-3 py-2 text-gray-500 shadow-sm outline-none focus:border-indigo-600"
                />
              </div>
              <div>
                <label class="font-medium"> Email</label>
                <input
                  name="email"
                  type="email"
                  required
                  class="mt-2 w-full rounded-lg border bg-transparent px-3 py-2 text-gray-500 shadow-sm outline-none focus:border-indigo-600"
                />
              </div>
              <div>
                <label class="font-medium">Message</label>
                <textarea
                  name="message"
                  required
                  class="mt-2 h-36 w-full resize-none appearance-none rounded-lg border bg-transparent px-3 py-2 shadow-sm outline-none focus:border-indigo-600"
                ></textarea>
              </div>
              <button type="submit" class="btn btn-primary w-full">
                Submit</button
              >
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
