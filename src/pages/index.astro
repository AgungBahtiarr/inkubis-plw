---
import { Image } from "astro:assets";
import Base from "@layouts/Base.astro";
import { markdownify } from "@lib/utils/textConverter";
import { getEntryBySlug } from "astro:content";
import agenda from "../assets/agenda.png?url";

const homepage = await getEntryBySlug("homepage", "index");
const { banner } = homepage.data;

const gallery = await Astro.glob("../../public/images/gallery/*");

export const prerender = true;
---

<Base>
  <!-- banner -->
  <section class="section pb-[50px]">
    <div class="container">
      <div class="row text-center">
        <div class="mx-auto lg:col-10">
          <h1 class="font-primary font-bold">{banner?.title}</h1>
          {
            banner?.content && (
              <p class="mt-4" set:html={markdownify(banner.content)} />
            )
          }

          {
            banner?.button?.enable && (
              <a
                class="btn btn-primary mt-4 py-[14px]"
                href={banner.button.link}
              >
                {banner.button.label}
              </a>
            )
          }

          {
            banner?.image && (
              <Image
                class="mx-auto mt-12"
                src={banner?.image}
                width={750}
                height={390}
                alt="banner image"
              />
            )
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Logos -->

  <section class="section pb-[50px]">
    <div class="container">
      <div class="row text-center">
        <div class="mx-auto lg:col-10">
          <h1 class="font-primary font-bold">Our Graduate Startups</h1>

          <p class="mb-8 mt-4">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quisquam
            alias quidem eius, sunt possimus ipsa placeat voluptate ut aliquid
            voluptatem esse voluptates accusamus hic reprehenderit adipisci
            magni laborum, fuga nisi?
          </p>

          <div
            class="flex flex-row flex-wrap items-center justify-center gap-8"
          >
            <div
              class="col-span-6 flex items-center justify-center sm:col-span-4 md:col-span-3 xl:col-span-2"
            >
              <img
                src="https://cdn.devdojo.com/tails/images/disney-plus.svg"
                alt="Disney Plus"
                class="block h-12 object-contain"
              />
            </div>
            <div
              class="col-span-6 flex items-center justify-center sm:col-span-4 md:col-span-3 xl:col-span-2"
            >
              <img
                src="https://cdn.devdojo.com/tails/images/google.svg"
                alt="Google"
                class="block h-9 object-contain"
              />
            </div>
            <div
              class="col-span-6 flex items-center justify-center sm:col-span-4 md:col-span-3 xl:col-span-2"
            >
              <img
                src="https://cdn.devdojo.com/tails/images/hubspot.svg"
                alt="Hubspot"
                class="block h-9 object-contain"
              />
            </div>
            <div
              class="col-span-6 flex items-center justify-center sm:col-span-4 md:col-span-3 xl:col-span-2"
            >
              <img
                src="https://cdn.devdojo.com/tails/images/youtube.svg"
                alt="Youtube"
                class="block h-7 object-contain lg:h-8"
              />
            </div>
            <div
              class="col-span-6 flex items-center justify-center sm:col-span-4 md:col-span-6 xl:col-span-2"
            >
              <img
                src="https://cdn.devdojo.com/tails/images/slack.svg"
                alt="Slack"
                class="block h-9 object-contain"
              />
            </div>
            <div
              class="col-span-6 flex items-center justify-center sm:col-span-4 md:col-span-6 xl:col-span-2"
            >
              <img
                src="https://cdn.devdojo.com/tails/images/shopify.svg"
                alt="Shopify"
                class="block h-9 object-contain"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service -->

  <section class="bg-white py-20">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-center text-4xl font-bold tracking-tight">
        Our Features
      </h2>
      <p class="mt-2 text-center text-lg text-gray-600">
        Check out our list of awesome features below.
      </p>
      <div
        class="mt-10 grid grid-cols-4 gap-8 sm:grid-cols-8 sm:px-8 lg:grid-cols-12 xl:px-0"
      >
        <div
          class="relative col-span-4 flex flex-col items-center justify-between space-y-4 overflow-hidden bg-gray-100 px-8 py-12 sm:rounded-xl"
          data-rounded="rounded-xl"
          data-rounded-max="rounded-full"
        >
          <div
            class="rounded-full bg-blue-500 p-3 text-white"
            data-primary="blue-500"
            data-rounded="rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M14 3v4a1 1 0 0 0 1 1h4"></path><path
                d="M5 8v-3a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2h-5"
              ></path><circle cx="6" cy="14" r="3"></circle><path
                d="M4.5 17l-1.5 5l3 -1.5l3 1.5l-1.5 -5"></path></svg
            >
          </div>
          <h4 class="text-xl font-medium text-gray-700">Certifications</h4>
          <p class="text-center text-base text-gray-500">
            Each of our plan will provide you and your team with certifications.
          </p>
        </div>

        <div
          class="col-span-4 flex flex-col items-center justify-between space-y-4 bg-gray-100 px-8 py-12 sm:rounded-xl"
          data-rounded="rounded-xl"
          data-rounded-max="rounded-full"
        >
          <div
            class="rounded-full bg-blue-500 p-3 text-white"
            data-primary="blue-500"
            data-rounded="rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M18 8a3 3 0 0 1 0 6"></path><path
                d="M10 8v11a1 1 0 0 1 -1 1h-1a1 1 0 0 1 -1 -1v-5"></path><path
                d="M12 8h0l4.524 -3.77a0.9 .9 0 0 1 1.476 .692v12.156a0.9 .9 0 0 1 -1.476 .692l-4.524 -3.77h-8a1 1 0 0 1 -1 -1v-4a1 1 0 0 1 1 -1h8"
              ></path></svg
            >
          </div>
          <h4 class="text-xl font-medium text-gray-700">Notifications</h4>
          <p class="text-center text-base text-gray-500">
            Send out notifications to all your customers to keep them engaged.
          </p>
        </div>

        <div
          class="col-span-4 flex flex-col items-center justify-between space-y-4 bg-gray-100 px-8 py-12 sm:rounded-xl"
          data-rounded="rounded-xl"
          data-rounded-max="rounded-full"
        >
          <div
            class="rounded-full bg-blue-500 p-3 text-white"
            data-primary="blue-500"
            data-rounded="rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"
              ></path><polyline
                points="12 3 20 7.5 20 16.5 12 21 4 16.5 4 7.5 12 3"
              ></polyline><line x1="12" y1="12" x2="20" y2="7.5"></line><line
                x1="12"
                y1="12"
                x2="12"
                y2="21"></line><line x1="12" y1="12" x2="4" y2="7.5"
              ></line><line x1="16" y1="5.25" x2="8" y2="9.75"></line></svg
            >
          </div>
          <h4 class="text-xl font-medium text-gray-700">Bundles</h4>
          <p class="text-center text-base text-gray-500">
            High-quality bundles of awesome tools to help you out.
          </p>
        </div>

        <div
          class="col-span-4 flex flex-col items-center justify-between space-y-4 bg-gray-100 px-8 py-12 sm:rounded-xl"
          data-rounded="rounded-xl"
          data-rounded-max="rounded-full"
        >
          <div
            class="rounded-full bg-blue-500 p-3 text-white"
            data-primary="blue-500"
            data-rounded="rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M8 9l3 3l-3 3"></path><line x1="13" y1="15" x2="16" y2="15"
              ></line><rect x="3" y="4" width="18" height="16" rx="2"
              ></rect></svg
            >
          </div>
          <h4 class="text-xl font-medium text-gray-700">Developer Tools</h4>
          <p class="text-center text-base text-gray-500">
            Developer tools to help grow your application and keep it
            up-to-date.
          </p>
        </div>

        <div
          class="col-span-4 flex flex-col items-center justify-between space-y-4 bg-gray-100 px-8 py-12 sm:rounded-xl"
          data-rounded="rounded-xl"
          data-rounded-max="rounded-full"
        >
          <div
            class="rounded-full bg-blue-500 p-3 text-white"
            data-primary="blue-500"
            data-rounded="rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line
                x1="9.5"
                y1="11"
                x2="9.51"
                y2="11"></line><line x1="14.5" y1="11" x2="14.51" y2="11"
              ></line><path d="M9.5 15a3.5 3.5 0 0 0 5 0"></path><path
                d="M7 5h1v-2h8v2h1a3 3 0 0 1 3 3v9a3 3 0 0 1 -3 3v1h-10v-1a3 3 0 0 1 -3 -3v-9a3 3 0 0 1 3 -3"
              ></path></svg
            >
          </div>
          <h4 class="text-xl font-medium text-gray-700">Building Blocks</h4>
          <p class="text-center text-base text-gray-500">
            The right kind of building blocks to take your company to the next
            level.
          </p>
        </div>

        <div
          class="col-span-4 flex flex-col items-center justify-between space-y-4 bg-gray-100 px-8 py-12 sm:rounded-xl"
          data-rounded="rounded-xl"
          data-rounded-max="rounded-full"
        >
          <div
            class="rounded-full bg-blue-500 p-3 text-white"
            data-primary="blue-500"
            data-rounded="rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line
                x1="15"
                y1="5"
                x2="15"
                y2="7"></line><line x1="15" y1="11" x2="15" y2="13"></line><line
                x1="15"
                y1="17"
                x2="15"
                y2="19"></line><path
                d="M5 5h14a2 2 0 0 1 2 2v3a2 2 0 0 0 0 4v3a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-3a2 2 0 0 0 0 -4v-3a2 2 0 0 1 2 -2"
              ></path></svg
            >
          </div>
          <h4 class="text-xl font-medium text-gray-700">Coupons</h4>
          <p class="text-center text-base text-gray-500">
            Coupons system to provide special offers and discounts for your app.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Agenda -->

  <section class="section pb-[50px]">
    <h1 class="text-center font-primary font-bold">Agenda</h1>
    <div
      class="mt-12 flex flex-col-reverse items-center justify-center gap-12 md:flex-row"
    >
      <Image src={agenda} alt="Service image" width={650} height="100" />
      <div class="flex flex-col">
        <p class="w-96">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Commodi sed
          possimus libero quos dolor iusto repellat, sint, numquam vero magnam,
          sequi suscipit. Ipsum quod ex minus blanditiis dolor ab amet!
        </p>
        <a href="/agenda" class="btn btn-primary mt-4 py-[14px] text-center">Learn more</a>
      </div>
    </div>
  </section>

  <!-- Gallery -->

  <section class="section pb-[50px]">
    <div class="container">
      <div class="row text-center">
        <div class="mx-auto lg:col-10">
          <h1 class="font-primary font-bold">Our Gallery</h1>
          <p class="mb-2 mt-4">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quisquam
            alias quidem eius, sunt possimus ipsa placeat voluptate ut aliquid
            voluptatem esse voluptates accusamus hic reprehenderit adipisci
            magni laborum, fuga nisi?
          </p>

          <div class="section row pb-0">
            <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
              {
                gallery.slice(0, 4).map((image: any) => {
                  return (
                    <div>
                      <img
                        class="h-52 w-52 rounded-lg object-cover"
                        src={image.default.src}
                        alt="p"
                      />
                    </div>
                  );
                })
              }
            </div>
            <div class="mt-5">
              <a href="/gallery" class="btn btn-primary mt-4 py-[14px]"
                >View More</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
